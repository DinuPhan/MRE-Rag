# Embedding Engine Selection (GEMINI, OPENAI, INHOUSE)
EMBEDDING_PROVIDER=GEMINI

# Gemini Configuration
GEMINI_API_KEY=your_gemini_api_key_here

# OpenAI Configuration
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_EMBEDDING_DIMENSION=1536

# In-House Embedding Configuration
INHOUSE_BASE_URL=http://your-inhouse-server:8000/api/v1
INHOUSE_API_KEY=optional_auth_token
INHOUSE_EMBEDDING_DIMENSION=768

# Qdrant Database Configuration
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY= # Leave empty for local docker instances without auth

# MCP / FastAPI Server Configuration
HOST=0.0.0.0
PORT=8051

# Output directory for llms.txt and skills.md
OUTPUT_DIR=output

# Neo4j Graph DB Configuration
NEO4J_URI=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
